<CreateAccountWindow>:
    name: "create"
    namee: namee
    email: email
    password: passw

    FloatLayout:

        FloatLayout:
            size: root.width, root.height / 2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x": 0.1, "top": 1}
                font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text: "Name:"
            size_hint: 0.5, 0.12
            pos_hint: {"x": 0, "top": 0.8}
            font_size: (root.width**2 + root.height**2) / 14**4

        TextInput:
            id: namee
            size_hint: 0.4, 0.12
            pos_hint: {"x": 0.5, "top": 0.8}
            multiline: False
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text: "Email:"
            size_hint: 0.5, 0.12
            pos_hint: {"x": 0, "top": 0.67}
            font_size: (root.width**2 + root.height**2) / 14**4

        TextInput:
            id: email
            size_hint: 0.4, 0.12
            pos_hint: {"x": 0.5, "top": 0.67}
            multiline: False
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text: "Password:"
            size_hint: 0.5, 0.12
            pos_hint: {"x": 0, "top": 0.54}
            font_size: (root.width**2 + root.height**2) / 14**4

        TextInput:
            id: passw
            size_hint: 0.4, 0.12
            pos_hint: {"x": 0.5, "top": 0.54}
            multiline: False
            password: True
            font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            text: "Already have an Account? Log In"
            size_hint: 0.4, 0.1
            pos_hint: {"x": 0.3, "y": 0.25}
            font_size: (root.width**2 + root.height**2) / 17**4
            on_release: root.login()

        Button:
            text: "Submit"
            size_hint: 0.6, 0.15
            pos_hint: {"x": 0.2, "y": 0.05}
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: root.submit()


<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:

        Label:
            text: "Email:"
            size_hint: 0.35, 0.15
            pos_hint: {"x": 0.1, "top": 0.9}
            font_size: (root.width**2 + root.height**2) / 13**4

        TextInput:
            id: email
            size_hint: 0.4, 0.15
            pos_hint: {"x": 0.45, "top": 0.9}
            multiline: False
            font_size: (root.width**2 + root.height**2) / 13**4

        Label:
            text: "Password:"
            size_hint: 0.35, 0.15
            pos_hint: {"x": 0.1, "top": 0.7}
            font_size: (root.width**2 + root.height**2) / 13**4

        TextInput:
            id: password
            size_hint: 0.4, 0.15
            pos_hint: {"x": 0.45, "top": 0.7}
            multiline: False
            password: True
            font_size: (root.width**2 + root.height**2) / 13**4

        Button:
            text: "Login"
            size_hint: 0.6, 0.2
            pos_hint: {"x": 0.2, "y": 0.05}
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release: root.loginBtn()

        Button:
            text: "NÃ£o tem uma conta? Bora criar!"
            size_hint: 0.4, 0.1
            pos_hint: {"x": 0.3, "y": 0.3}
            font_size: (root.width**2 + root.height**2) / 17**4
            on_release: root.createBtn()


<MainWindow>:
    n: n
    email: email
    created: created

    FloatLayout:

        Label:
            id: n
            text: "Account Name:"
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.8, 0.2

        Label:
            id: email
            text: "Email:"
            pos_hint: {"x": 0.1, "top": 0.7}
            size_hint: 0.8, 0.2

        Label:
            id: created
            text: "Created:"
            pos_hint: {"x": 0.1, "top": 0.5}
            size_hint: 0.8, 0.2

        Button:
            text: "Sair"
            size_hint: 0.6, 0.2
            pos_hint: {"x": 0.2, "y": 0.1}
            on_release: app.root.current = "login"
